<html>

<head>
    <title>Login</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/libs/animate.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

    <!-- JS -->
    <script src="/js/main.js" type="text/javascript"></script>
</head>

<body class="signup-body">
    <h3 id="header-signin">SIGN IN USING</h3>
    <div class="signup-section">
        <a href="http://localhost:3000/auth/facebook">
            <div>
                <button class="social-btn" id="btn-fb"><i class="fa fa-facebook social-logo"></i>LOGIN WITH FACEBOOK</button>
            </div>
        </a>
        <a href="http://localhost:3000/auth/linkedin">
            <div>
                <button class="social-btn" id="btn-ln"><i class="fa fa-linkedin social-logo"></i>LOGIN WITH LINKEDIN</button>
            </div>
        </a>
        <a href="http://localhost:3000/auth/google">
            <div>
                <button class="social-btn" id="btn-gg"><i class="fa fa-google-plus social-logo"></i>LOGIN WITH GOOGLE PLUS</button>
            </div>
        </a>
    </div>

</body>

</html>