<body class="signup-body">

    <%- include header.ejs %>

    <h3 id="header-signin">SIGN IN USING</h3>
    <div class="signup-section">
        <a href="/auth/facebook">
            <div>
                <button class="social-btn" id="btn-fb">
                    <i class="fa fa-facebook social-logo"></i>LOGIN WITH FACEBOOK</button>
            </div>
        </a>
        <a href="/auth/linkedin">
            <div>
                <button class="social-btn" id="btn-ln">
                    <i class="fa fa-linkedin social-logo"></i>LOGIN WITH LINKEDIN</button>
            </div>
        </a>
        <a href="/auth/google">
            <div>
                <button class="social-btn" id="btn-gg">
                    <i class="fa fa-google-plus social-logo"></i>LOGIN WITH GOOGLE PLUS</button>
            </div>
        </a>
    </div>

    <section id="menu" class="menu-section margin-top-10vh display-none">
